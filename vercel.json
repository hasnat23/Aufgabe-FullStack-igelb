{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/websites",
      "destination": "/api/websites"
    },
    {
      "source": "/websites/:id",
      "destination": "/api/websites-modify?id=:id"
    },
    {
      "source": "/crawl/:websiteId",
      "destination": "/api/crawl?websiteId=:websiteId"
    },
    {
      "source": "/changes/:websiteId",
      "destination": "/api/changes?websiteId=:websiteId"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
