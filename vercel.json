{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/websites/:path*",
      "destination": "/api/websites.cjs"
    },
    {
      "source": "/websites",
      "destination": "/api/websites.cjs"
    },
    {
      "source": "/crawl/:websiteId",
      "destination": "/api/crawl.cjs?websiteId=:websiteId"
    },
    {
      "source": "/changes/:websiteId",
      "destination": "/api/changes.cjs?websiteId=:websiteId"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
